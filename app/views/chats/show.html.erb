<h1>This is a chat!</h1>
<%= link_to "See all chats", chats_path %>
<ul>
  <% @messages.each do |m| %>
    <li><%= m.user.name %>: <%= m.body %></li>
  <% end %>
</ul>

<%= simple_form_for @message do |f| %>
  <%= f.input :body %>
  <%= f.input :chat_id, as: :hidden %>
  <br>
  <%= f.submit "Post a new message." %>
<% end %>
